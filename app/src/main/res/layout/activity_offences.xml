<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Offences">

    <TextView
        android:id="@+id/textView87"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="#242775"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/ssearchstoffence"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/searchtv"
        android:drawableTint="@color/adminclr"
        android:elevation="-12dp"
        android:gravity="center_vertical"
        android:hint="Search"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#BEE3E3E3"
        app:layout_constraintEnd_toStartOf="@+id/imageView5toff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView87" />

    <ImageView
        android:id="@+id/imageView5toff"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/imagesearchtv"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView87"
        app:srcCompat="@drawable/icsearch24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleoffcs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtolimit" />

    <TextView
        android:id="@+id/totaloffencecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recycleoffcs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssearchstoffence" />

    <Button
        android:id="@+id/addtolimit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bookingbuttons"
        android:text="Authorize Again"
        app:backgroundTint="@color/newpurp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/totaloffencecount"
        app:layout_constraintTop_toBottomOf="@+id/ssearchstoffence" />

</androidx.constraintlayout.widget.ConstraintLayout>